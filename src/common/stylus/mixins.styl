wh(w, h)
  width: w
  height: h

fullscreen()
  wh(100%, 100%)
  position: fixed
  left: 0
  top: 0

shadow-bg()
  box-shadow: 0 0 3.5em .3em rgba(10, 10, 10, 0.1)

flex-center-h()
  display: flex
  justify-content: center

flex-center-v()
  flex-center-h()
  flex-direction column

flex-center()
  flex-center-h()
  align-items center


